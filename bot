import os
from telegram import Update
from telegram.ext import Application, CommandHandler, MessageHandler, filters, ContextTypes

TOKEN = os.getenv("TOKEN")  # از Environment Variables میاد

ADMIN_ID = 5337627861  # اینجا آیدی تلگرام کسی که پیام ناشناس می‌گیره

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("اینجا، هرچی دوست داری؛ به صورت ناشناس برای من بفرست")

async def anonymous_msg(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = update.message.text
    await context.bot.send_message(chat_id=ADMIN_ID, text=f"📩 پیام ناشناس:\n{text}")
    await update.message.reply_text("پیامت برام اومد. در اولین فرصت میخونمش")

app = Application.builder().token(TOKEN).build()
app.add_handler(CommandHandler("start", start))
app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, anonymous_msg))

app.run_polling()
