async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("Ø§ÛŒÙ†Ø¬Ø§ØŒ Ù‡Ø±Ú†ÛŒ Ø¯ÙˆØ³Øª Ø¯Ø§Ø±ÛŒØ› Ø¨Ù‡ ØµÙˆØ±Øª Ù†Ø§Ø´Ù†Ø§Ø³ Ø¨Ø±Ø§ÛŒ Ù…Ù† Ø¨ÙØ±Ø³Øª")

async def anonymous_msg(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = update.message.text
    await context.bot.send_message(chat_id=ADMIN_ID, text=f"ğŸ“© Ù¾ÛŒØ§Ù… Ù†Ø§Ø´Ù†Ø§Ø³:\n{text}")
